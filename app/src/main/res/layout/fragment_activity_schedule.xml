<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_green_dark"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|start"
            android:padding="3dp"
            android:layout_marginLeft="30dp"
            android:text="Activity"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center|end"
            android:padding="3dp"
            android:layout_marginRight="30dp"
            android:text="Time"
            android:textColor="@android:color/white"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/physicalLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Physical Activities"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text="05:30 am - 07:30 am"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/personalLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Personal Work"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:id="@+id/collegeLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="College"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text="09:30 am - 04:30 pm"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/studyingLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Studying"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text="06:30 pm - 07:30 pm"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/sleepingLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Sleeping"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text="10:30 pm - 05:00 am"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:id="@+id/othersLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:background="?attr/selectableItemBackground"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_weight="1"
                android:gravity="start|center"
                android:text="Others"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:layout_marginTop="2.5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_weight="1"
                android:gravity="center|end"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>